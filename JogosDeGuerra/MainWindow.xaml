<Window x:Class="JogosDeGuerra.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JogosDeGuerra"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Click="BtnEscolherExercito_Click"  
                Grid.Row="0" x:Name="BtnIndia">India</Button>
        <Button Click="BtnEscolherExercito_Click" Grid.Row="1"
                Content="Persia" x:Name="BtnPersia"/>
        <Button Click="BtnEscolherExercito_Click" 
                Grid.Row="2" Content="Egito" 
                x:Name="BtnEgito"/>
    </Grid>
</Window>
