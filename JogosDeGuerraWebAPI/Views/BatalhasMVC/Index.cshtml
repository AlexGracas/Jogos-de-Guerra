@model IEnumerable<JogosDeGuerraModel.Batalha>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <button  type="button" onclick="CriarNovaBatalha(1)">Entrar em novo Jogo</button>    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ExercitoBranco.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExercitoPreto.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tabuleiro.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Turno.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vencedor.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExercitoBranco.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExercitoPreto.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tabuleiro.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Turno.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vencedor.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.ActionLink("Iniciar Batalha", "Tabuleiro", "BatalhasMVC", new { Id = item.Id }, null) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    @section MeusScripts{
        <script src="~/Scripts/Tabuleiro.js"></script>
    }

</table>
